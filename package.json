{
	"name": "idcard-generator",
	"version": "0.1.10",
	"author": "ddki",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "run-p type-check build-only",
		"preview": "vite preview",
		"test:unit": "vitest",
		"build-only": "vite build",
		"type-check": "vue-tsc --noEmit --composite false",
		"lint": "eslint . --fix",
		"format": "prettier --write .",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"prepare": "husky install",
		"clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
		"clean:lib": "rimraf node_modules",
		"reinstall": "rimraf pnpm-lock.yaml && rimraf package.lock.json && rimraf node_modules && pnpm install",
		"commit": "git-cz",
		"changelog": "conventional-changelog -p angular -i CHANGE_LOG.md -s -n changelog-config.cjs",
		"release": "npx release-it --increment patch --config .release-it.cjs",
		"script:changelog": "npx esmo scripts/changelog.ts --version ",
		"script:update": "npx esmo scripts/update.ts"
	},
	"dependencies": {
		"@kangc/v-md-editor": "^2.3.18",
		"@tauri-apps/plugin-process": "2.0.0",
		"@tauri-apps/plugin-store": "2.0.0",
		"@tauri-apps/plugin-updater": "2.0.0",
		"element-plus": "^2.8.4",
		"pinia": "^2.2.4",
		"pinyin-pro": "^3.25.0",
		"vue": "^3.5.11",
		"vue-clipboard3": "^2.0.0",
		"vue-router": "^4.4.5"
	},
	"devDependencies": {
		"@actions/github": "^6.0.0",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@commitlint/types": "^19.5.0",
		"@eslint/js": "^9.12.0",
		"@release-it/bumper": "^6.0.1",
		"@release-it/conventional-changelog": "^8.0.2",
		"@rushstack/eslint-patch": "^1.10.4",
		"@tauri-apps/api": "2.0.2",
		"@tauri-apps/cli": "2.0.2",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.7.5",
		"@vitejs/plugin-vue": "^5.1.4",
		"@vitejs/plugin-vue-jsx": "^4.0.1",
		"@vue/eslint-config-prettier": "^10.0.0",
		"@vue/eslint-config-typescript": "^14.0.1",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.5.1",
		"autoprefixer": "^10.4.20",
		"commitizen": "^4.3.1",
		"conventional-changelog-cli": "^5.0.0",
		"cz-git": "^1.10.1",
		"eslint": "^9.12.0",
		"eslint-plugin-vue": "^9.28.0",
		"esno": "^4.8.0",
		"globals": "^15.11.0",
		"husky": "^9.1.6",
		"inquirer": "^12.0.0",
		"internal-ip": "^8.0.0",
		"jsdom": "^25.0.1",
		"kleur": "^4.1.5",
		"less": "^4.2.0",
		"less-loader": "^12.2.0",
		"minimist": "^1.2.8",
		"node-fetch": "^3.3.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"release-it": "^17.8.2",
		"rimraf": "^6.0.1",
		"sass": "^1.79.5",
		"tailwindcss": "^3.4.13",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.8.1",
		"unplugin-auto-import": "^0.18.3",
		"unplugin-element-plus": "^0.8.0",
		"unplugin-vue-components": "^0.27.4",
		"vite": "^5.4.8",
		"vite-plugin-html": "^3.2.2",
		"vitest": "^2.1.2",
		"vue-tsc": "^2.1.6"
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,md,json,css,scss,yaml}": [
			"prettier --write"
		],
		"**/*.{cjs,mjs,ts,vue}": [
			"eslint --fix"
		],
		"**/*": [
			"git add"
		]
	},
	"volta": {
		"node": "22.2.0",
		"pnpm": "9.1.4"
	}
}
